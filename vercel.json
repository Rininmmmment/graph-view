{
    "version": 2,
    "functions": {
        "api/*.py": {
            "includeFiles": "backend/**"
        }
    },
    "builds": [
        {
            "src": "backend/app.py",
            "use": "@vercel/python"
        },
        {
            "src": "frontend/package.json",
            "use": "@vercel/next"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "backend/app.py"
        },
        {
            "src": "/(.*)",
            "dest": "/frontend/.next/$1"
        }
    ]
}